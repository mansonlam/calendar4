@model Calendar.Models.Attachment

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>
<h2>@ViewData["Title"] - ID @Html.DisplayFor(model => model.ID), <span id="idStatusInTitle"></span></h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Attachment</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <label asp-for="FileName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FileName" class="form-control" />
                <span asp-validation-for="FileName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FilePath" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FilePath" class="form-control" />
                <span asp-validation-for="FilePath" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EventID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="EventID" class="form-control" readonly />
                <span asp-validation-for="EventID" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
